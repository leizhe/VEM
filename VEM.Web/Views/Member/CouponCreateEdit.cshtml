@model VEM.Model.Coupon
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/media/css/select2_metro.css" />
<link rel="stylesheet" type="text/css" href="~/media/css/chosen.css"/>
<link rel="stylesheet" type="text/css" href="~/media/css/bootstrap-datetimepicker.min.css" />
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    @ViewBag.Pagetitle <small></small>
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        @Html.MvcSiteMap().SiteMapPath()
                    </li>
                </ul>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
<div class="portlet box  light-grey">
    <div class="portlet-title">
        <div class="caption"><i class="icon-reorder"></i>@ViewBag.Pagetitle</div>
    </div>
    <div class="portlet-body form">
        <code style=" font-size:13px;">优惠券的值根据选择的类型填写，现金优惠券直接填写现金数，折扣优惠券直接输入折扣如：8折就需要输入0.8</code>
        <br /><br />
 @using (Html.BeginForm("CouponCreateEdit", "Member", FormMethod.Post, new { id = "CouponForm", @class = "form-vertical" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="alert alert-error hide">
                            <button class="close" data-dismiss="alert"></button>
                            <span id="errorText">错误信息</span>
                        </div>
            <div class="alert alert-success hide">
                <button class="close" data-dismiss="alert"></button>
                填写完毕，你现在可以提交表单了!
            </div>
        @Html.HiddenFor(model => model.Id)
        <div class="control-group">
            <label class="control-label">优惠券类型<span class="required">*</span></label>
            <div class="controls">
                @Html.DropDownList("CouponTypeSelect")
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">值<span class="required">*</span></label>
            <div class="controls">
                @Html.EditorFor(model => model.Value, new { htmlAttributes = new { @class = "span6 m-wrap" } })
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">开始时间<span class="required">*</span></label>
            <div class="controls">
                @if (Model!=null)
                {
                    @Html.TextBox("Begintime", Model.Begintime.ToString("yyyy-MM-dd"), new { @class = "m-wrap m-ctrl-medium form_datetime", @readonly = "" } )
                }else
	            {
                    @Html.TextBox("Begintime", "", new { @class = "m-wrap m-ctrl-medium form_datetime", @readonly = "" } )
                }
                
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">结束时间<span class="required">*</span></label>
            <div class="controls">
                @if (Model != null)
                {
                    @Html.TextBox("EndTime", Model.EndTime.ToString("yyyy-MM-dd"), new { @class = "m-wrap m-ctrl-medium form_datetime", @readonly = "" } )
                }
                else
                {
                    @Html.TextBox("EndTime", "", new { @class = "m-wrap m-ctrl-medium form_datetime", @readonly = "" } )
                }
               
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">状态<span class="required">*</span></label>
            <div class="controls">
                <label class="radio">
                    @Html.RadioButtonFor(model => model.Status, true, new { @id = "radio1", @name = "rdolstState", @checked = "checked" })可用
                </label>
                <label class="radio">
                    @Html.RadioButtonFor(model => model.Status, false, new { @id = "radio0", @name = "rdolstState" })不可用
                </label>
            </div>
        </div>
        <div class="form-actions">
                <button type="submit" class="btn green">保存</button>
                <button type="reset" class="btn">重置表单</button>
            </div>
    </div>
}
</div>
</div>
      </div>
   </div>
<div>
    @Html.ActionLink("返回", "CouponIndex")
</div>
<script type="text/javascript" src="~/media/js/jquery.validate.min.js"></script>
<script type="text/javascript" src="~/media/js/additional-methods.min.js"></script>
<script type="text/javascript" src="~/media/js/select2.min.js"></script>
<script type="text/javascript" src="~/media/js/chosen.jquery.min.js"></script>
<script type="text/javascript" src="~/media/js/bootstrap-datetimepicker.min.js"></script>
<script type="text/javascript" src="~/media/js/bootstrap-datetimepicker.zh-CN.js" charset="UTF-8"></script>
<script type="text/javascript" src="~/media/myjs/PageScript/CouponCreateEdit.js"></script>

