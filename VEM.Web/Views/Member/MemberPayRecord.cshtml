@model IEnumerable<VEM.Model.PayRecord>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row-fluid">
    <div class="span12">
        <h3 class="page-title">
            @ViewBag.MemberName <small></small>
        </h3>
        <ul class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                @Html.MvcSiteMap().SiteMapPath()
            </li>
        </ul>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="portlet box light-grey">
            <div class="portlet-title">
                <div class="caption"><i class="icon-globe"></i>@ViewBag.MemberName</div>
            </div>
            <div class="portlet-body">
                <div class="clearfix">
                    <div class="btn-group">
                    </div>
                    <div class="btn-group pull-right">
                      
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover" id="sample_1">
                    <thead>
                        <tr>
                            <th>
                                金额
                            </th>
                            <th>
                                时间
                            </th>
                            <th>
                                操作
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="odd gradeX">
                                <td>
                                    @Html.DisplayFor(modelItem => item.Money)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreateDate)
                                </td>
                                <td>
                                    @if (item.IncomeOrExpenses == (int)VEM.Business.Util.MemberPayRecord.充值)
                                    {
                                        @Html.Raw("<span class='label label-success'>充值</span>")
                                    }
                                    else
                                    {
                                        @Html.Raw("<span class='label label-danger'>消费</span>")
                                    }
                                </td>
                                <td></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
        <div>
            <a href="/Member/MemberIndex">返 回</a>
        </div>
    </div>
</div>
