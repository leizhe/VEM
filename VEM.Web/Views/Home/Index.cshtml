@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/media/css/jquery.gritter.css" rel="stylesheet" type="text/css" />
<div class="row-fluid">
    <div class="span12">
        <h3 class="page-title">
            <small><i class="icon-home"></i> 首页 </small>
        </h3>
    </div>
</div>
<div class="row-fluid">
    <div class="span3 responsive" data-desktop="span3" data-tablet="span6">
        @Html.Raw(ViewBag.ErrorHtml)
    </div>
    <div class="span3 responsive" data-desktop="span3" data-tablet="span6">
        <div class='dashboard-stat green'>
            <div class='visual'>
                <i class='icon-truck'></i>
            </div>
            <div class='details'>
                <div class='number'>@ViewBag.ReserveCount</div>
                <div class='desc'>库存</div>
            </div>
            <a class='more' href='/Monitor/ReserveMsg'>
                查看更多<i class='m-icon-swapright m-icon-white'></i>
            </a>
        </div>
    </div>
    <div class="span3 responsive" data-desktop="span3" data-tablet="span6  fix-offset">
        <div class="dashboard-stat purple">
            <div class="visual">
                <i class="icon-user"></i>
            </div>
            <div class="details">
                <div class="number">@ViewBag.MemberCount</div>
                <div class="desc">会员</div>
            </div>
            <a class="more" href="/Member/MemberIndex">
                查看更多<i class="m-icon-swapright m-icon-white"></i>
            </a>
        </div>
    </div>
    <div class="span3 responsive" data-desktop="span3" data-tablet="span6">
        <div class="dashboard-stat yellow">
            <div class="visual">
                <i class="icon-shopping-cart"></i>
            </div>
            <div class="details">
                <div class="number">@ViewBag.CommodCount</div>
                <div class="desc">商品</div>
            </div>
            <a class="more" href="/Commod/CommodIndex">
                查看更多<i class="m-icon-swapright m-icon-white"></i>
            </a>
        </div>
    </div>
</div>
<div class="row-fluid">
    <div class="span6">
        <div class="portlet paddingless">
            <div class="portlet-title">
                <div class="caption"><i class="icon-bar-chart"></i>销量曲线图</div>
                <div class="tools">
                    <div class="btn-group pull-right" data-toggle="buttons-radio">
                    </div>
                </div>
            </div>
            <div class="portlet-body">
                <div id="site_statistics_loading">
                    <img src="/Media/image/loading.gif" alt="loading" />
                </div>
                <div id="site_statistics_content" class="hide">
                    <div id="site_statistics" class="chart"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="span6">
        <div class="portlet paddingless">
            <div class="portlet-body">
                <div class="tabbable tabbable-custom">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#tab_1_1" data-toggle="tab">实时出货状态</a></li>
                        <li><a href="#tab_1_2" data-toggle="tab">实时销售信息</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab_1_1">
                            @{Html.RenderAction("GetShipmentStatus", "Home");}
                        </div>
                        <div class="tab-pane" id="tab_1_2">
                            @{Html.RenderAction("GetSalesHistory", "Home");}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="portlet box light-grey">
            <div class="clearfix"></div>
            <div class="portlet">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-heart"></i>我的售货机
                    </div>
                    <div class="actions">
                    </div>
                </div>
                <div class="portlet-body">
                    @{Html.RenderAction("MyMachine", "Home");}
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/media/js/jquery.flot.js" type="text/javascript"></script>
<script src="~/media/js/jquery.flot.resize.js" type="text/javascript"></script>
<script src="~/media/myjs/PageScript/index.js" type="text/javascript"></script>
