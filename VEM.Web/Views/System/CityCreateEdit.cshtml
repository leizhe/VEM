@model VEM.Model.City
@{
    ViewBag.Title = "CityCreateEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/media/css/select2_metro.css" />
<link rel="stylesheet" type="text/css" href="~/media/css/chosen.css" />
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    @ViewBag.Pagetitle <small></small>
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        @Html.MvcSiteMap().SiteMapPath()
                    </li>
                </ul>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
<div class="portlet box  light-grey">
    <div class="portlet-title">
        <div class="caption"><i class="icon-reorder"></i>@ViewBag.Pagetitle</div>
    </div>
    <div class="portlet-body form">
        <h3></h3>
 @using (Html.BeginForm("CityCreateEdit", "System", FormMethod.Post, new { id = "CityForm", @class = "form-vertical" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="alert alert-error hide">
                            <button class="close" data-dismiss="alert"></button>
                            <span id="errorText">错误信息</span>
                        </div>
            <div class="alert alert-success hide">
                <button class="close" data-dismiss="alert"></button>
                填写完毕，你现在可以提交表单了!
            </div>
        @Html.HiddenFor(model => model.Id)
        <div class="control-group">
            <label class="control-label">城市名<span class="required">*</span></label>
            <div class="controls">
                @Html.EditorFor(model => model.CityName, new { htmlAttributes = new { @class = "span6 m-wrap" } })
            </div>
        </div>
        <div class="form-actions">
                <button type="submit" class="btn green">保存</button>
                <button type="reset" class="btn">重置表单</button>
            </div>
    </div>
}
</div>
</div>
      </div>
   </div>
<div>
    @Html.ActionLink("返回", "RegionManager")
</div>
<script type="text/javascript" src="~/media/js/jquery.validate.min.js"></script>
<script type="text/javascript" src="~/media/js/additional-methods.min.js"></script>
<script type="text/javascript" src="~/media/js/select2.min.js"></script>
<script type="text/javascript" src="~/media/js/chosen.jquery.min.js"></script>
<script type="text/javascript" src="~/media/myjs/PageScript/CityCreateEdit.js"></script>

