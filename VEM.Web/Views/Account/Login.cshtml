@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>VEM System | 登陆页</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    @System.Web.Optimization.Styles.Render("~/Media/GlpbalCss")
    <link href="~/Media/css/login.css" rel="stylesheet" type="text/css" />
    <link rel="shortcut icon" href="/Media/image/favicon.ico" />
</head>
<body class="login">
    <div class="logo">
        <img src="/Media/image/logo-big.png" alt="" />
    </div>
    <div class="content">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "login", @class = "login-form" }))
        {
            <h3 class="form-title">请输入你的账号</h3>
            <div class="alert alert-error hide" id="errorMsg">
                <button class="close" data-dismiss="alert"></button>
                <span id="errorText">错误信息</span>
            </div>
            <div class="control-group">
                <label class="control-label visible-ie8 visible-ie9">用户名</label>
                <div class="controls">
                    <div class="input-icon left">
                        <i class="icon-user"></i>
                        <input class="m-wrap placeholder-no-fix" type="text" placeholder="用户名" name="username" />
                    </div>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label visible-ie8 visible-ie9">密码</label>
                <div class="controls">
                    <div class="input-icon left">
                        <i class="icon-lock"></i>
                        <input class="m-wrap placeholder-no-fix" type="password" placeholder="密码" name="password" />
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <label class="checkbox">
                    @Html.CheckBox("remember", false)记住我
                </label>
                <button type="submit" data-ajax="true" class="btn green pull-right">
                    登录 <i class="m-icon-swapright m-icon-white"></i>
                </button>
            </div>
            <div class="forget-password">
                <h4>忘记密码 ?</h4>
                <p>
                    请点击 <a href="javascript:;" class="" id="forget-password">这里</a>
                    重置你的密码.
                </p>
            </div>
            <div class="create-account">
                <p>
                    还没有用户账号 ?&nbsp;
                    <a href="javascript:alert('联系管理员');" id="callAdmin-btn" class="">联系管理员</a>
                </p>
            </div>
        }
        @using (Html.BeginForm("ForgetPassword", "Account", FormMethod.Post, new { id = "forget", @class = "forget-form" }))
        {
            <h3 class="">忘记密码 ?</h3>
            <p>请输入你的电子邮件地址重置你的密码.</p>
            <div class="control-group">
                <div class="controls">
                    <div class="input-icon left">
                        <i class="icon-envelope"></i>
                        <input class="m-wrap placeholder-no-fix" type="text" placeholder="电子邮件" name="email" />
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <button type="button" id="back-btn" class="btn">
                    <i class="m-icon-swapleft"></i> 返回
                </button>
                <button type="submit" class="btn green pull-right">
                    提交 <i class="m-icon-swapright m-icon-white"></i>
                </button>
            </div>
        }
    </div>
    <div class="copyright">
        2016 &copy; VemSystem by Homson.
    </div>
    @System.Web.Optimization.Scripts.Render("~/Media/CorePlugins")
    <script src="~/Media/js/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/Media/js/jquery.backstretch.min.js" type="text/javascript"></script>
    <script src="~/Media/myjs/App.js" type="text/javascript"></script>
    <script src="~/Media/myjs/CommonScript.js"></script>
    <script src="~/Media/myjs/Status.js"></script>
    <script src="~/Media/myjs/PageScript/HomeLogin.js"></script>
</body>

</html>