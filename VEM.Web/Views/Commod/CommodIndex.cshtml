@model IEnumerable<VEM.Model.Commod>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row-fluid">
    <div class="span12">
        <h3 class="page-title">
            商品管理 <small>管理售货机商品信息</small>
        </h3>
        <ul class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                @Html.MvcSiteMap().SiteMapPath()
            </li>
        </ul>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="portlet box light-grey">
            <div class="portlet-title">
                <div class="caption"><i class="icon-globe"></i>商品管理</div>
            </div>
            <div class="portlet-body">
                <div class="clearfix">
                    <div class="btn-group">
                        <a name="btnAddCommon" href="~/Commod/CommodCreateEdit?mc='CommodIndex'&id=0" class="btn red"><i class="icon-plus"></i> 添加商品</a>
                    </div>
                    <div class="btn-group pull-right">
                        @using (Html.BeginForm("CommodIndex", "Commod", FormMethod.Get, new { @name = "sForm", @class = "form-vertical" }))
                        {
                            @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "m-wrap placeholder-no-fix", @placeholder = "商品名称或条码" })
    <a name="btnSearchCommon" href="javascript:document.sForm.submit();" class="btn black">搜索 <i class="m-icon-swapright m-icon-white"></i></a>
                        }
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover" id="sample_1">
                    <thead>
                        <tr>
                            <th>
                            </th>
                            <th>
                                商品名称
                            </th>
                            <th>
                                条码编号
                            </th>
                            <th>
                                单位
                            </th>
                            <th>
                                容量
                            </th>
                            <th>
                                价格(元)
                            </th>
                            <th>
                                描述
                            </th>


                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="odd gradeX">
                                <td style="width: 80px;">
                                    <img src="@item.Pic" alt="" style="width: 80px;">
                                </td>
                                <td style=" vertical-align:middle">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td style=" vertical-align:middle">
                                    @Html.DisplayFor(modelItem => item.Code)
                                </td>
                                <td style=" vertical-align:middle">
                                    @Html.DisplayFor(modelItem => item.Unit)
                                </td>
                                <td style=" vertical-align:middle">
                                    @Html.DisplayFor(modelItem => item.Capacity)
                                </td>
                                <td style=" vertical-align:middle">
                                    <code>@Html.DisplayFor(modelItem => item.Price)</code>
                                </td>
                                <td style=" vertical-align:middle">
                                    @Html.DisplayFor(modelItem => item.Describle)
                                </td>
                                <td style=" vertical-align:middle">
                                    <a name="btnUpdCommon" href="~/Commod/CommodCreateEdit?mc='CommodIndex'&id=@item.Id" class="btn mini green"><i class="icon-edit"></i> 修改</a>
                                    <a name="btnDetailsCommon" href="~/Commod/CommodDetails?mc='CommodIndex'&id=@item.Id" class="btn mini purple"><i class="icon-eye-open"></i> 详细</a>
                                    <a name="btnDelCommon" href="~/Commod/CommodDle/?id=@item.Id" class="btn mini red delete-link"><i class="icon-remove"></i> 删除</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @Html.Partial("Controls/PagerLink")
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="@Url.Content("~/Media/myjs/PageScript/CommodIndex.js")"></script>
