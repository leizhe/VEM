@model VEM.Model.Commod
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/media/css/bootstrap-fileupload.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" type="text/css" href="~/media/css/select2_metro.css" />
<link rel="stylesheet" type="text/css" href="~/media/css/chosen.css" />
<div class="row-fluid">
    <div class="span12">
        <h3 class="page-title">
            @ViewBag.Pagetitle <small></small>
        </h3>
        <ul class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                @Html.MvcSiteMap().SiteMapPath()
            </li>
        </ul>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="portlet box  light-grey">
            <div class="portlet-title">
                <div class="caption"><i class="icon-reorder"></i>@ViewBag.Pagetitle</div>
            </div>
            <div class="portlet-body form">
                <h3></h3>

                <div class="profile-classic row-fluid">
                    <div class="hide showPic">
                        <div style="height: auto;" id="accordion2-2" class="accordion collapse in">
                            @using (Html.BeginForm("UploadImage", "Commod", FormMethod.Post, new { id = "UserPicForm", enctype = "multipart/form-data" }))
                            {
                                <div class="controls">
                                    <div class="thumbnail" style="width: 291px;">
                                        <img id="showPic" src="#" alt="">
                                    </div>
                                </div>

                            }
                        </div>
                    </div>
                    <div class="form-horizontal thisform">
                        @using (Html.BeginForm("CommodCreateEdit", "Commod", FormMethod.Post, new { id = "CommodForm" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="alert alert-error hide">
                                <button class="close" data-dismiss="alert"></button>
                                <span id="errorText">错误信息</span>
                            </div>
                            <div class="alert alert-success hide">
                                <button class="close" data-dismiss="alert"></button>
                                填写完毕，你现在可以提交表单了!
                            </div>
                            @Html.HiddenFor(model => model.Id)
                            @Html.HiddenFor(model => model.CreateUserID)
                            @Html.HiddenFor(model => model.CreateDate)
                            <div class="control-group uploadImage">
                                <label class="control-label">上传商品图片<span class="required">*</span></label>
                                <div class="controls imgUrl">
                                    <div class="fileupload fileupload-new" data-provides="fileupload">
                                        <div class="input-append">
                                            <div class="uneditable-input">
                                                <i class="icon-file fileupload-exists"></i>
                                                <span class="fileupload-preview"></span>
                                            </div>
                                            <span class="btn btn-file">
                                                <span class="fileupload-new">选择文件</span>
                                                <span class="fileupload-exists">重新选择</span>
                                                <input type="file" id="uploadImage" name="uploadImage" class="default" />
                                            </span>
                                            @*<a href="#" class="btn fileupload-exists" data-dismiss="fileupload">删除</a>*@
                                        </div>
                                        <button id="btnUploadImage" type="button" class="btn blue">上传</button>
                                    </div>

                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label">商品名称<span class="required">*</span></label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "span6 m-wrap" } })
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">条形码<span class="required">*</span></label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "span6 m-wrap" } })
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">单位</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.Unit, new { htmlAttributes = new { @class = "span6 m-wrap" } })
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">容量</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.Capacity, new { htmlAttributes = new { @class = "span6 m-wrap" } })
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">价格</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "span6 m-wrap", @type = "number" } })
                             
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">描述</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.Describle, new { htmlAttributes = new { @class = "span6 m-wrap" } })
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">商品图片路径<span class="required">*</span></label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.Pic, new { htmlAttributes = new { @class = "span6 m-wrap", @readonly = "readonly" } })
                                </div>
                            </div>
                            <div class="form-actions">
                                <button type="submit" class="btn green">保存</button>
                            </div>

                        }
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("返回", "CommodIndex")
</div>
<script type="text/javascript" src="~/media/js/jquery.validate.min.js"></script>
<script type="text/javascript" src="~/media/js/additional-methods.min.js"></script>
<script type="text/javascript" src="~/media/js/select2.min.js"></script>
<script type="text/javascript" src="~/media/js/chosen.jquery.min.js"></script>
<script type="text/javascript" src="~/media/js/bootstrap-fileupload.js"></script>
<script type="text/javascript" src="~/media/js/ajaxfileupload.js"></script>

<script type="text/javascript" src='@Url.Content("~/media/myjs/PageScript/CommodCreateEdit.js")'></script>

