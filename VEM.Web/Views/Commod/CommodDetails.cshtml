@model VEM.Model.Commod
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row-fluid">
    <div class="span12">
        <h3 class="page-title">
            商品详情 <small></small>
        </h3>
        <ul class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                @Html.MvcSiteMap().SiteMapPath()
            </li>
        </ul>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="portlet box  light-grey">
            <div class="portlet-title">
                <div class="caption"><i class="icon-reorder"></i>商品详情</div>
            </div>
            <div class="portlet-body form">
                <h3></h3>

                <div class="profile-classic row-fluid">
                    <div class="showPic span3">
                        <div style="height: auto;" id="accordion2-2" class="accordion collapse in">
                         
                                <div class="controls">
                                    <div class="thumbnail" style="width: 291px;">
                                        <img id="showPic" src="@Model.Pic" alt="">
                                    </div>
                                </div>

                            
                        </div>
                    </div>
                    <div class="form-horizontal thisform span9">
                            @Html.HiddenFor(model => model.Id)
                            <div class="control-group">
                                <label class="control-label">商品名称<span class="required">*</span></label>
                                <div class="controls">
                                    @Html.DisplayFor(model => model.Name, new { htmlAttributes = new { @class = "span6 m-wrap" } })
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">条形码<span class="required">*</span></label>
                                <div class="controls">
                                    @Html.DisplayFor(model => model.Code, new { htmlAttributes = new { @class = "span6 m-wrap" } })
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">单位</label>
                                <div class="controls">
                                    @Html.DisplayFor(model => model.Unit, new { htmlAttributes = new { @class = "span6 m-wrap" } })
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">容量</label>
                                <div class="controls">
                                    @Html.DisplayFor(model => model.Capacity, new { htmlAttributes = new { @class = "span6 m-wrap" } })
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">描述</label>
                                <div class="controls">
                                    @Html.DisplayFor(model => model.Describle, new { htmlAttributes = new { @class = "span6 m-wrap" } })
                                </div>
                            </div>
                        <div class="control-group">
                            <label class="control-label">创建人</label>
                            <div class="controls">
                                @Html.Raw(HtmlExtensions.GetUserNameById(Model.CreateUserID))
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">创建时间</label>
                            <div class="controls">
                                @Html.DisplayFor(model => model.CreateDate, new { htmlAttributes = new { @class = "span6 m-wrap" } })
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">修改人</label>
                            <div class="controls">
                               @Html.Raw(HtmlExtensions.GetUserNameById(Model.ModifyUserID))
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">修改时间</label>
                            <div class="controls">
                                @Html.DisplayFor(model => model.ModifyDate, new { htmlAttributes = new { @class = "span6 m-wrap" } })
                            </div>
                        </div>
                            <div class="control-group">
                                <label class="control-label">商品图片路径<span class="required">*</span></label>
                                <div class="controls">
                                    @Html.DisplayFor(model => model.Pic, new { htmlAttributes = new { @class = "span6 m-wrap", @readonly = "readonly" } })
                                </div>
                            </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>
<div>
    <p>
        <a href="~/Commod/CommodCreateEdit?mc='CommodIndex'&id=@Model.Id">修改</a> |
        @Html.ActionLink("返回", "CommodIndex")
    </p>

</div>

