@model IEnumerable<VEM.Model.Role>
@{
    ViewBag.Title = "RoleIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid">
    <div class="span12">
        <h3 class="page-title">
            角色管理 <small>用于为用户设定角色，分配角色权限等功能</small>
        </h3>
        <ul class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                @Html.MvcSiteMap().SiteMapPath()
            </li>
        </ul>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="portlet box light-grey">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-globe"></i>角色信息表
                </div>
            </div>
            <div class="portlet-body">
                <div class="clearfix">
                    <div class="btn-group">
                       
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover table-full-width dataTable">
                    <thead>
                        <tr>
                            <th>
                                角色名称
                            </th>

                            <th>
                                状态
                            </th>
                            <th width=" 15%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="odd gradeX">
                                <td>
                                    @Html.DisplayFor(modelItem => item.RoleName)
                                </td>
                                <td>
                                    @if (item.IsEnable == true)
                                    {
                                        @Html.Raw("<span class='label label-success'>已启用</span>")
                                    }
                                    else
                                    {
                                        @Html.Raw("<span class='label label-danger'>已禁用</span>")
                                    }
                                </td>
                                <td>
                                    <a name="btnGiveRolePrivilege" href="~/Privilege/RolePrivilegeManager/?ms=RolePrivilege&id=@item.Id" class="btn mini purple"><i class="icon-repeat"></i>分配权限</a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @Html.Partial("Controls/PagerLink")
            </div>
        </div>
    </div>
</div>
