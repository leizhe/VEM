@model VEM.Model.Role
@{
    ViewBag.Title = "RoleEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid">
    <div class="span12">
        <h3 class="page-title">
            修改角色 <small>修改角色名称和状态</small>
        </h3>
        <ul class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                @Html.MvcSiteMap().SiteMapPath()
                <i class="icon-angle-right"></i>
            </li>
        </ul>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="portlet box  light-grey">
            <div class="portlet-title">
                <div class="caption"><i class="icon-reorder"></i>修改角色</div>
            </div>
            <div class="portlet-body form">
               @using (Html.BeginForm("RoleEdit", "Privilege", FormMethod.Post, new { id = "RoleForm", @class = "form-vertical" }))
               {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <div class="alert alert-error hide">
                            <button class="close" data-dismiss="alert"></button>
                            <span id="errorText">错误信息</span>
                        </div>
                        <div class="alert alert-success hide">
                            <button class="close" data-dismiss="alert"></button>
                            填写完毕，你现在可以提交表单了!
                        </div>
                        @Html.HiddenFor(model => model.Id)

                        <div class="control-group">
                            <label class="control-label">角色名称<span class="required">*</span></label>
                            <div class="controls">
                                @Html.EditorFor(model => model.RoleName, new { htmlAttributes = new { @class = "span6 m-wrap" } })
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">角色状态<span class="required">*</span></label>
                            <div class="controls">
                                <label class="radio">
                                    @Html.RadioButtonFor(model => model.IsEnable, true)启用
                                </label>
                                <label class="radio">
                                    @Html.RadioButtonFor(model => model.IsEnable, false)禁用
                                </label>
                            </div>
                        </div>
                        <div class="form-actions">
                            <button type="submit" class="btn green">保存</button>
                            <button type="reset"  class="btn">重置表单</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("返回", "RoleIndex")
</div>
@Scripts.Render("~/Media/UtilPlugins")
<script type="text/javascript" src="~/media/js/jquery.validate.min.js"></script>
<script type="text/javascript" src="~/media/myjs/PageScript/RoleEdit.js"></script>
