<?xml version="1.0" encoding="utf-8" ?>
<mvcSiteMap xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns="http://mvcsitemap.codeplex.com/schemas/MvcSiteMap-File-4.0"
            xsi:schemaLocation="http://mvcsitemap.codeplex.com/schemas/MvcSiteMap-File-4.0 MvcSiteMapSchema.xsd">
  <mvcSiteMapNode title="主页" controller="Home" action="Index">
    <mvcSiteMapNode title="角色管理" controller="Privilege" action="RoleIndex">
      <mvcSiteMapNode title="创建角色" controller="Privilege" action="RoleCreate"/>
      <mvcSiteMapNode title="修改角色" controller="Privilege" action="RoleEdit"/>
    </mvcSiteMapNode>
    <mvcSiteMapNode title="用户管理" controller="Privilege" action="UserIndex">
      <mvcSiteMapNode title="添加用户" controller="Privilege" action="UserCreate"/>
      <mvcSiteMapNode title="修改用户" controller="Privilege" action="UserEdit"/>
      <mvcSiteMapNode title="用户角色分配" controller="Privilege" action="GiveUserRole"/>
    </mvcSiteMapNode>
    <mvcSiteMapNode title="用户权限管理" controller="Privilege" action="UserPrivilege">
      <mvcSiteMapNode title="分配权限" controller="Privilege" action="UserPrivilegeManager"/>
